import React, { useEffect, useState } from 'react';
import { View, Text, Button } from 'react-native';
import { FileSystem } from 'react-native-unimodules';

const dataFilePath = `${FileSystem.documentDirectory}data.json`;

const LocalDatabaseExample = () => {
  const [userData, setUserData] = useState(null);

  useEffect(() => {
    loadData();
  }, []);

  const loadData = async () => {
    try {
      const fileContent = await FileSystem.readAsStringAsync(dataFilePath);
      const parsedData = JSON.parse(fileContent);
      setUserData(parsedData);
    } catch (error) {
      console.error('Error reading data from file: ', error);
    }
  };

  const saveData = async () => {
    try {
      const data = {
        users: [
          { id: 1, name: 'John Doe', email: 'john@example.com' },
          { id: 2, name: 'Jane Doe', email: 'jane@example.com' }
        ]
      };

      await FileSystem.writeAsStringAsync(dataFilePath, JSON.stringify(data));
      setUserData(data);
    } catch (error) {
      console.error('Error saving data to file: ', error);
    }
  };

  const retrieveData = async () => {
    try {
      const fileContent = await FileSystem.readAsStringAsync(dataFilePath);
      const parsedData = JSON.parse(fileContent);
      setUserData(parsedData);
    } catch (error) {
      console.error('Error retrieving data from file: ', error);
    }
  };

  const clearData = async () => {
    try {
      await FileSystem.deleteAsync(dataFilePath, { idempotent: true });
      setUserData(null);
      console.log('Data cleared successfully!');
    } catch (error) {
      console.error('Error clearing data from file: ', error);
    }
  };

  return (
    <View>
      <Text>Local JSON Database Example</Text>
      {userData && (
        <View>
          <Text>User Data:</Text>
          {userData.users.map((user) => (
            <Text key={user.id}>{`${user.name} - ${user.email}`}</Text>
          ))}
        </View>
      )}
      <Button title="Save Data" onPress={saveData} />
      <Button title="Retrieve Data" onPress={retrieveData} />
      <Button title="Clear Data" onPress={clearData} />
    </View>
  );
};

export default LocalDatabaseExample;
